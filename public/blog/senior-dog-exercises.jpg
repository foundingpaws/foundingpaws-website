<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#fff8dc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f5f5dc;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Senior dog doing gentle exercises -->
  <g transform="translate(200, 150)">
    <!-- Body (slightly hunched - senior) -->
    <ellipse cx="0" cy="25" rx="45" ry="25" fill="#d4af37" stroke="#b8941f" stroke-width="2"/>
    
    <!-- Head (slightly lowered) -->
    <ellipse cx="0" cy="-10" rx="25" ry="20" fill="#d4af37" stroke="#b8941f" stroke-width="2"/>
    
    <!-- Ears (relaxed) -->
    <ellipse cx="-15" cy="-25" rx="6" ry="12" fill="#d4af37" stroke="#b8941f" stroke-width="2" transform="rotate(-10)"/>
    <ellipse cx="15" cy="-25" rx="6" ry="12" fill="#d4af37" stroke="#b8941f" stroke-width="2" transform="rotate(10)"/>
    
    <!-- Eyes (wise) -->
    <circle cx="-8" cy="-15" r="2.5" fill="#2c1810"/>
    <circle cx="8" cy="-15" r="2.5" fill="#2c1810"/>
    
    <!-- Nose -->
    <ellipse cx="0" cy="-8" rx="2" ry="1.5" fill="#2c1810"/>
    
    <!-- Mouth (gentle smile) -->
    <path d="M -4 -5 Q 0 -2 4 -5" stroke="#2c1810" stroke-width="1.5" fill="none"/>
    
    <!-- Legs (gentle movement) -->
    <path d="M -15 45 Q -20 50 -15 55" stroke="#d4af37" stroke-width="3" fill="none"/>
    <path d="M -3 45 Q -8 50 -3 55" stroke="#d4af37" stroke-width="3" fill="none"/>
    <path d="M 3 45 Q 8 50 3 55" stroke="#d4af37" stroke-width="3" fill="none"/>
    <path d="M 15 45 Q 20 50 15 55" stroke="#d4af37" stroke-width="3" fill="none"/>
    
    <!-- Tail (gentle wag) -->
    <ellipse cx="30" cy="10" rx="8" ry="4" fill="#d4af37" stroke="#b8941f" stroke-width="2" transform="rotate(20)"/>
  </g>
  
  <!-- Exercise equipment for seniors -->
  <g transform="translate(80, 200)">
    <!-- Gentle ramp -->
    <rect x="0" y="0" width="60" height="8" fill="#8b4513" rx="4"/>
    <rect x="0" y="-20" width="8" height="20" fill="#8b4513"/>
  </g>
  
  <g transform="translate(300, 180)">
    <!-- Soft mat -->
    <rect x="0" y="0" width="40" height="20" fill="#90ee90" stroke="#228b22" stroke-width="2" rx="5"/>
    <text x="20" y="12" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#2c5f2d">Matte</text>
  </g>
  
  <!-- Gentle movement arrows -->
  <g transform="translate(120, 100)">
    <path d="M 0 0 Q 10 -5 20 0" stroke="#d4af37" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
  </g>
  
  <g transform="translate(280, 120)">
    <path d="M 0 0 Q -10 5 -20 0" stroke="#d4af37" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
  </g>
  
  <!-- Text overlay -->
  <text x="200" y="250" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#2c5f2d" font-weight="bold">
    Übungen für Senior-Hunde
  </text>
</svg>
