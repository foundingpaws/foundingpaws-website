<svg width="200" height="280" viewBox="0 0 200 280" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e6f3ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f0f8ff;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Book cover -->
  <rect width="200" height="280" fill="url(#bg)" stroke="#2c5f2d" stroke-width="3" rx="8"/>
  
  <!-- Title -->
  <text x="100" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#2c5f2d" font-weight="bold">
    Ernährungsplan
  </text>
  <text x="100" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#2c5f2d">
    für gesunde Gelenke
  </text>
  
  <!-- Food illustration -->
  <g transform="translate(100, 120)">
    <!-- Bowl -->
    <ellipse cx="0" cy="10" rx="25" ry="8" fill="#8b4513" stroke="#654321" stroke-width="2"/>
    <ellipse cx="0" cy="5" rx="25" ry="8" fill="#f4e4bc" stroke="#8b4513" stroke-width="2"/>
    
    <!-- Food items -->
    <circle cx="-10" cy="0" r="3" fill="#90ee90"/>
    <circle cx="0" cy="-3" r="3" fill="#ffd700"/>
    <circle cx="10" cy="0" r="3" fill="#ff6347"/>
    <circle cx="-5" cy="5" r="2" fill="#daa520"/>
    <circle cx="5" cy="5" r="2" fill="#98fb98"/>
  </g>
  
  <!-- Nutrition icons -->
  <g transform="translate(50, 180)">
    <circle cx="0" cy="0" r="12" fill="#d4af37" opacity="0.3"/>
    <text x="0" y="4" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#2c5f2d">🥕</text>
  </g>
  
  <g transform="translate(100, 180)">
    <circle cx="0" cy="0" r="12" fill="#d4af37" opacity="0.3"/>
    <text x="0" y="4" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#2c5f2d">🐟</text>
  </g>
  
  <g transform="translate(150, 180)">
    <circle cx="0" cy="0" r="12" fill="#d4af37" opacity="0.3"/>
    <text x="0" y="4" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#2c5f2d">🥩</text>
  </g>
  
  <!-- Joint health symbol -->
  <g transform="translate(100, 220)">
    <circle cx="0" cy="0" r="15" fill="#d4af37" opacity="0.2"/>
    <path d="M -8 -8 L 8 8 M 8 -8 L -8 8" stroke="#2c5f2d" stroke-width="2"/>
  </g>
  
  <!-- Footer -->
  <text x="100" y="260" text-anchor="middle" font-family="Arial, sans-serif" font-size="10" fill="#2c5f2d">
    16 Seiten • PDF
  </text>
</svg>
